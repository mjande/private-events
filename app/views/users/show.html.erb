<div class="text-lg semibold mx-6 mt-6"><%= "#{current_user.first_name} #{current_user.last_name}" %></div>
<div class="text-lg semibold mx-6 mb-6"><%= current_user.email %></div>

<h1 class="text-lg underline mx-6">Created Events</h1>
<div id="events" class="flex flex-wrap">
  <% current_user.created_events.each do |event| %>
    <div><%= render event %></div>
  <% end %>
</div>

<div class="border border-gray-500 border-solid w-1/2 m-6">
  <div class='p-2 text-lg semibold underline'>Attended Events</div>
  <% @attended_events.each do |event| %>
    <div class="p-2">
      <%= event.name %>
      <%= "#{Date::MONTHNAMES[event.date.month]} #{event.date.day}, #{event.date.year}" %>
    </div>
  <% end %>
</div>

<%= link_to "Back to events", events_path%>